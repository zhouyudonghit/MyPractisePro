<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/dp_px_layout">
                <TextView android:id="@+id/dp_px"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="dp_px_transfer"
                    android:textSize="16sp"
                    android:gravity="center"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="dp"
                    android:id="@+id/dp_et"
                    android:textSize="16sp"></EditText>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="px"
                    android:id="@+id/px_et"
                    android:textSize="16sp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dp_px_layout"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_show_area_size"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/real_screen_size"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>