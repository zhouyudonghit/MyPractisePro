    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/drag_tv"
        android:layout_weight="1"
        android:text="drag"
        android:background="@android:color/holo_blue_dark"/>
</LinearLayout>